generator clent {
    provider = "prisma-client-js"
    previewFeatures = ["relationJoins"]
}

datasource db {
    provider = "postgresql"
    url = "postgresql://postgres:senai@127.0.0.1:5432/projetoPessoal"
}

// Tabela Usu√°rio

model Usuario {
    id Int @id @default(autoincrement())
    nome String
    email String @unique
    senha String @unique
    token Token[]
    curso Curso[]

    @@map("usuario")
}

// Tabela Token

model Token {
    id Int @id @default(autoincrement())
    token     String   @db.VarChar(255)
    type      String
    usuarioId Int
    revoked   Boolean  @default(value: false)
    expiresAt DateTime
    usuario   Usuario  @relation(fields: [usuarioId], references: [id])

    @@map("token")
}

// Tabela Curso

model Curso {
    id Int @id @default(autoincrement())
    nome_curso String @unique
    link String @unique
    tempo DateTime 
    usuario Usuario @relation(fields: [id], references: [id])
    
    @@map("curso")
}