generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}
model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
  ourses Course[]
  @@map("usuario")
}

model Course {
  id        Int     @id @default(autoincrement())
  title     String
  content   String?
  published Boolean @default(false)
  author    User    @relation(fields: [authorId], references: [id])
  authorId  Int
  @@map("curso")
}